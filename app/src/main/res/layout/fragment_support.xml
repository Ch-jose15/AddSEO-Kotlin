<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/supportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Podemos ayudarte?\n¡Tu soporte, al alcance de un clic!"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/supportDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvídate de las esperas y resuelve tus dudas al instante desde un solo sitio."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Botón Llamar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/accent"

            android:textColor="@color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_phone"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>

        <!-- Botón Chatear -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/accent"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_message"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>

        <!-- Botón Agendar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/accent"

            android:textColor="@color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_calendar"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
