<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    tools:context=".ScheduleCallActivity">

    <!-- AppBar fija con los elementos que no se desplazan -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            app:layout_scrollFlags="noScroll">

            <!-- Botón de Regresar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBackButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/yellow_primary"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Regresar"
                    android:src="@drawable/ic_arrow_back_custom" />
            </androidx.cardview.widget.CardView>

            <!-- Número de cita -->
            <TextView
                android:id="@+id/tvAppointmentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/yellow_light"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ID de cita: CT-2304221-1234"
                android:textColor="@color/gray_800"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Pregunta principal en diagonal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardBackButton">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_primary"
                    android:paddingStart="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:rotation="-2"
                    android:text="¿Qué necesitas hoy?"
                    android:textColor="@color/gray_900"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Tarjeta principal inclinada en dirección opuesta -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:rotation="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agendar una Llamada"
                        android:textAlignment="center"
                        android:textColor="@color/gray_900"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:justificationMode="inter_word"
                        android:text="Programa una llamada con uno de nuestros especialistas para resolver tus dudas de manera personalizada. Nuestro equipo está disponible para asistirte en cualquier asunto técnico o consulta que necesites resolver. Selecciona la fecha y hora que mejor se adapte a tu disponibilidad."
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_700"
                        android:textSize="15sp" />

                    <!-- Separador creativo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="@color/yellow_primary" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/circle_yellow" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/circle_yellow" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="@color/yellow_primary" />
                    </LinearLayout>

                    <!-- Lista desplegable de zonas horarias -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Selecciona tu zona horaria"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/timeZoneLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Zona horaria"
                        app:boxStrokeColor="@color/yellow_primary"
                        app:hintTextColor="@color/gray_600"
                        app:startIconDrawable="@drawable/ic_timezone"
                        app:startIconTint="@color/yellow_primary">

                        <AutoCompleteTextView
                            android:id="@+id/actvTimeZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="none"
                            android:text="(GMT+01:00) Madrid, España" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Selección de fecha -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Selecciona una fecha"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Contenedor para fechas disponibles -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/dateContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Fechas generadas dinámicamente -->
                            <!-- Ejemplo de fecha -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDate1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="LUN"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="23"
                                        android:textColor="@color/gray_900"
                                        android:textSize="26sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ABRIL"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDate2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/yellow_light"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MAR"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="24"
                                        android:textColor="@color/gray_900"
                                        android:textSize="26sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ABRIL"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDate3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MIÉ"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25"
                                        android:textColor="@color/gray_900"
                                        android:textSize="26sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ABRIL"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDate4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="JUE"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="26"
                                        android:textColor="@color/gray_900"
                                        android:textSize="26sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ABRIL"
                                        android:textColor="@color/gray_700"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Selección de hora -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Selecciona una hora"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Grid de horas disponibles -->
                    <LinearLayout
                        android:id="@+id/timeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <!-- Fila 1 de horas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="09:00"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/yellow_light"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary"
                                app:checkedIconVisible="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="10:30"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="12:00"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!-- Fila 2 de horas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="15:00"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="16:30"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardTime6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:checkable="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:checkedIcon="@drawable/ic_check"
                                app:checkedIconTint="@color/yellow_primary">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="18:00"
                                    android:textColor="@color/gray_800"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Resumen de la cita -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAppointmentSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:rotation="-1"
                        app:cardBackgroundColor="@color/yellow_light"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Resumen de tu cita"
                                android:textAlignment="center"
                                android:textColor="@color/gray_900"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/gray_800" />

                                <TextView
                                    android:id="@+id/tvSelectedDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Martes, 24 de Abril de 2025"
                                    android:textColor="@color/gray_900"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_time"
                                    app:tint="@color/gray_800" />

                                <TextView
                                    android:id="@+id/tvSelectedTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="10:30"
                                    android:textColor="@color/gray_900"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_timezone"
                                    app:tint="@color/gray_800" />

                                <TextView
                                    android:id="@+id/tvSelectedTimeZone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="(GMT+01:00) Madrid, España"
                                    android:textColor="@color/gray_900"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Formulario de Reserva -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Tus datos personales"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Nombre completo"
                        app:boxStrokeColor="@color/yellow_primary"
                        app:hintTextColor="@color/gray_600"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/yellow_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Correo electrónico"
                        app:boxStrokeColor="@color/yellow_primary"
                        app:hintTextColor="@color/gray_600"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/yellow_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Teléfono -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Número de teléfono"
                        app:boxStrokeColor="@color/yellow_primary"
                        app:hintTextColor="@color/gray_600"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/yellow_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón de Reservar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="@color/yellow_primary"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="RESERVAR CITA"
                        android:textColor="@color/gray_900"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_check_circle"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/gray_900" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>